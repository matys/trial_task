<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:task="http://www.springframework.org/schema/task"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd 
	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd
	http://www.springframework.org/schema/task http://www.springframework.org/schema/task/spring-task-3.2.xsd">

	<context:component-scan base-package="ee.playtech.trial.server.ws.rest" />
	<bean id="userBalanceWebservice" class="ee.playtech.trial.server.ws.rest.UserBalanceWebservice" />
	<bean id="webserviceMonitoringInterceptor"
		class="ee.playtech.trial.server.ws.rest.monitoring.WebserviceMonitoringInterceptor" />
	<bean id="playerEntitiesManager" class="ee.playtech.trial.server.database.PlayerEntitiesManager" />
	<task:annotation-driven />
	<bean id="statisticsScheduler" class="ee.playtech.trial.server.scheduler.StatisticsScheduler" />
	
	<bean id="userBalanceWebserviceProxy" 
                 class="org.springframework.aop.framework.ProxyFactoryBean">
 
		<property name="target" ref="userBalanceWebservice" />
 
		<property name="interceptorNames">
			<list>
				<value>webserviceMonitoringInterceptor</value>
			</list>
		</property>
	</bean>
</beans>